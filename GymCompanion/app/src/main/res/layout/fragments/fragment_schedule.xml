<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <ImageButton
            android:layout_width="72dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/btnBrowse"
            android:onClick="startActivityBrowse"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/btnMain"/>
    <ImageButton
            android:layout_width="72dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/btnMain"
            android:onClick="startActivityMain"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
            android:layout_width="72dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/btnSchedule"
            android:onClick="startActivitySchedule" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBrowse"/>
    <ImageButton
            android:layout_width="72dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/btnStatistics"
            android:onClick="startActivityStatistics" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnMyRoutines"/>
    <ImageButton
            android:layout_width="72dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/btnMyRoutines"
            android:onClick="startActivityMyRoutines" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnSchedule"/>

    <ListView
            android:layout_width="360dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/schedule_list" tools:layout_editor_absoluteY="42dp"/>

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

</android.support.constraint.ConstraintLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@color/colorAccent">

    <TextView
            android:text="Exercise Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_marginTop="28dp"
            android:layout_centerHorizontal="true" android:id="@+id/txtViewCardioExerciseName" android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:id="@+id/button3" android:layout_alignParentTop="true" android:onClick="goBackFromExercise"
            android:background="@color/DefaultColour" android:textColor="@color/white"/>
    <TextView
            android:text="Time Goal:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true" android:layout_marginTop="105dp"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:id="@+id/cardioExerciseTime" android:text="cardioTime"
            android:layout_alignParentStart="true" android:layout_marginStart="74dp"
            android:layout_alignTop="@+id/textView12"/>
    <TextView
            android:text="Intensity:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/textView8" android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="247dp"/>
    <TextView
            android:text="cardioIntensity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:layout_alignParentBottom="true" android:id="@+id/cardioExerciseIntensity"
            android:layout_centerHorizontal="true" android:layout_marginBottom="176dp"/>
    <TextView
            android:text="Minutes"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_alignParentTop="true" android:layout_alignEnd="@+id/cardioExerciseIntensity"
            android:layout_marginTop="182dp"/>

</RelativeLayout>
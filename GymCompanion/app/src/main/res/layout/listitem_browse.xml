<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="60dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtName"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textSize="24sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/blackColour"
    />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtBrowsePickAmountPrefix"
            android:layout_below="@+id/txtName"
            android:textSize="12sp"
            android:layout_alignStart="@+id/txtName"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSchedulePickAmountNumber"
            android:textSize="12sp"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_toEndOf="@id/txtBrowsePickAmountPrefix"
            android:layout_marginStart="63dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtBrowsePickDifficultyPrefix"
            android:text="Difficulty:"
            android:textSize="14sp"
            android:layout_centerVertical="true" android:layout_toStartOf="@+id/txtBrowseDifficulty"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtBrowseDifficulty"
            android:text="3.5"
            android:textSize="20sp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="14dp"
            android:layout_centerVertical="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:id="@+id/txtType" android:layout_alignStart="@+id/txtName"
    />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:layout_marginTop="11dp"
            android:id="@+id/txtHistoryDetailsTitle"
            android:layout_centerHorizontal="true" android:textSize="24sp"/>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHistoryDetailsTitle"
            android:id="@+id/listviewHistoryDetails">

    </ListView>
    <Button
            android:text="go back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/btnDetailsBack" android:onClick="goToHistory"/>
</RelativeLayout>

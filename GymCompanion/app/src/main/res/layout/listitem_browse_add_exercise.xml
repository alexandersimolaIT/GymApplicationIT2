// Purpose  :   This xml is used to create listitems to then use in a listview
// Used by  :   BrowseAddExerciseListAdapter.java
// Uses     :   BrowseActivity.java
//-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp" xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtName"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textSize="24sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/blackColour"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtBrowseDifficulty"
            android:textSize="12sp"
            android:layout_alignParentBottom="true" android:layout_below="@+id/txtName" android:layout_marginLeft="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtBrowsePickAmountPrefix"
            android:layout_below="@+id/txtName"
            android:textSize="12sp"
            android:layout_alignStart="@+id/txtBrowseDifficulty"
            android:layout_marginLeft="75dp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:id="@+id/txtType" android:layout_alignStart="@+id/txtName"
    />
    <ImageButton
            android:layout_width="40dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="11dp"
            android:layout_height="40dp" app:srcCompat="@android:drawable/ic_input_add"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:id="@+id/btnAddExercise"
            android:onClick="onAddExerciseToRoutineClick"
            style="@android:style/Widget.ImageButton"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" android:background="@color/colorAccent">

    <TextView
            android:text="Currently browsing"
            android:layout_width="250dp"
            android:layout_height="wrap_content" android:id="@+id/currentIndex" android:textSize="18sp"
            android:textAlignment="viewStart" android:layout_alignBaseline="@+id/btnBrowseSelectionBack"
            android:layout_alignParentEnd="true" android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"/>
    <Button
            android:text="Back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/btnBrowseSelectionBack" android:onClick="goToStart"
            android:background="@color/DefaultColour"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="500dp"
                 android:layout_marginTop="45dp"
                 android:layout_marginLeft="0dp">

        <TableRow android:layout_width="match_parent" android:layout_height="130dp">
            <Button
                    android:text="LOWER BACK"
                    android:layout_width="180dp"
                    android:layout_height="125dp" android:onClick="goToResult" android:id="@+id/b1"
                    android:layout_column="1" android:textSize="24sp" android:textColor="@color/white"
                    android:background="@color/DefaultColour"
                    android:layout_margin="3dp"/>
            <Button
                    android:text="UPPER BACK"
                    android:layout_width="180dp"
                    android:layout_height="125dp" android:onClick="goToResult"
                    android:layout_column="2" android:textSize="24sp" android:textColor="@color/white"
                    android:background="@color/DefaultColour"
                    android:layout_margin="3dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="SHOULDERS"
                    android:layout_width="180dp"
                    android:layout_height="125dp" android:onClick="goToResult"
                    android:layout_column="1" android:textSize="24sp" android:textColor="@color/white"
                    android:background="@color/DefaultColour"
                    android:layout_margin="3dp"/>
            <Button
                    android:text="CHEST"
                    android:layout_width="180dp"
                    android:layout_height="125dp" android:onClick="goToResult"
                    android:layout_column="2" android:textSize="24sp" android:textColor="@color/white"
                    android:background="@color/DefaultColour"
                    android:layout_margin="3dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="ABS"
                    android:layout_width="180dp"
                    android:layout_height="125dp" android:onClick="goToResult"
                    android:layout_column="1" android:textSize="24sp" android:textColor="@color/white"
                    android:background="@color/DefaultColour"
                    android:layout_margin="3dp"/>
            <Button
                    android:text="ARMS"
                    android:layout_width="180dp"
                    android:layout_height="125dp" android:onClick="goToResult"
                    android:layout_column="2" android:textSize="24sp" android:textColor="@color/white"
                    android:background="@color/DefaultColour"
                    android:layout_margin="3dp"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="LEGS"
                    android:layout_width="180dp"
                    android:layout_height="125dp" android:onClick="goToResult"
                    android:layout_column="1" android:textSize="24sp" android:textColor="@color/white"
                    android:background="@color/DefaultColour"
                    android:layout_margin="3dp"/>
            <Button
                    android:text="CALVES"
                    android:layout_width="180dp"
                    android:layout_height="125dp" android:onClick="goToResult"
                    android:layout_column="2" android:textSize="24sp" android:textColor="@color/white"
                    android:background="@color/DefaultColour"
                    android:layout_margin="3dp"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
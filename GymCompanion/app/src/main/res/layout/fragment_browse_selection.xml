// Uses     :   BrowseActivity.java
//-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" android:background="@color/colorAccent">

    <TextView
            android:text="Browsing muscle groups"
            android:layout_width="250dp"
            android:layout_height="wrap_content" android:id="@+id/currentIndex" android:textSize="18sp"
            android:textAlignment="viewStart" android:layout_alignBaseline="@+id/btnBrowseSelectionBack"
            android:layout_alignParentEnd="true" android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"/>
    <Button
            android:text="Back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/btnBrowseSelectionBack" android:onClick="goToStart"
            android:background="@color/DefaultColour"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"/>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentStart="true" android:background="@color/DefaultColour"
            android:layout_alignParentTop="true" android:layout_marginTop="57dp" android:id="@+id/listViewBrowseMuscleGroups"/>

</RelativeLayout>
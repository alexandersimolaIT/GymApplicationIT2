<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@color/colorAccent">

    <EditText
            android:text="Workout Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:layout_marginTop="18dp"
            android:id="@+id/txtEditMyRoutinesInfoRoutineName" android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@android:color/transparent"
            android:layout_centerHorizontal="true"/>
    <Button
            android:text="Go Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/btnBackToMyRoutines" android:onClick="goBackFromRoutine"
            android:background="@color/DefaultColour" android:textColor="@color/white"/>
    <TextView
            android:text="Amount of Exercises:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_marginTop="70dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark" android:layout_alignParentStart="true"
            android:layout_marginStart="50dp" tools:layout_marginStart="30dp"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_marginTop="177dp" android:id="@+id/listViewExercise"/>
    <Button
            android:text="Add Exercise"
            android:layout_width="match_parent"
            android:layout_height="69dp" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_marginTop="107dp" android:id="@+id/addExercise"
            android:textSize="24sp" android:textColor="@color/white" android:background="@color/DefaultColour"
            android:onClick="onClickAddExercise"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/textViewRoutineInfoAmountOfExercises" android:layout_marginTop="70dp"
            android:layout_marginEnd="40dp"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.MyRoutinesActivity">

    <FrameLayout
            android:layout_width="359dp"
            android:layout_height="97dp"
            app:layout_constraintEnd_toEndOf="parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageButton
                    android:layout_width="82dp"
                    android:layout_height="69dp" app:srcCompat="@drawable/addroutinepicture"
                    android:scaleType="fitCenter"
                    android:background="@color/transparentColour"
                    android:id="@+id/createRoutineButton" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/textView"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="Create Routine"
                    android:layout_height="41dp"
                    android:id="@+id/textView"
                    android:textSize="35sp"
                    android:textColor="@color/blackColour"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>

</RelativeLayout>
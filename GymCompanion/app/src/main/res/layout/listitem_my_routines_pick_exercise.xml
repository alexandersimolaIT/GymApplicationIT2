<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMyRoutinesListExerciseName"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textSize="24sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/blackColour"
    />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMyRoutinesListExercisePickAmountPrefix"
            android:layout_below="@+id/txtMyRoutinesListExerciseName"
            android:textSize="12sp"
            android:layout_alignStart="@+id/txtMyRoutinesListExerciseName"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMyRoutinesListExercisePickAmountNumber"
            android:textSize="12sp"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_toEndOf="@id/txtMyRoutinesListExercisePickAmountPrefix"
            android:layout_marginStart="63dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMyRoutinesListExercisePickDifficultyPrefix"
            android:text="Difficulty:"
            android:textSize="14sp"
            android:layout_centerVertical="true" android:layout_toStartOf="@+id/txtMyRoutinesListExerciseDifficulty"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMyRoutinesListExerciseDifficulty"
            android:text="3.5"
            android:textSize="20sp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="14dp"
            android:layout_centerVertical="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:id="@+id/txtMyRoutinesListExerciseType" android:layout_alignStart="@+id/txtMyRoutinesListExerciseName"
    />
</RelativeLayout>

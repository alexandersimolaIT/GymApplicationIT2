<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="50dp">

    <TextView
            android:text="Set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_centerVertical="true" android:layout_marginStart="10dp"
            android:textColor="@color/blackColour"
            android:textSize="24sp"/>
    <TextView
            android:layout_width="131dp"
            android:textColor="@color/blackColour"
            android:layout_height="wrap_content"
            android:id="@+id/setNumber"
            android:textSize="24sp"
            android:layout_alignParentStart="true" android:layout_marginStart="58dp"
            android:layout_centerVertical="true" android:text="setNumber"/>
    <NumberPicker
            android:layout_width="47dp"
            android:layout_height="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/setWeight" android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="17dp"/>
    <NumberPicker
            android:layout_width="47dp"
            android:layout_height="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="86dp" android:id="@+id/setReps" android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
</RelativeLayout>
// Purpose  :   Fragment that lets the user interact and chose an muscle group to then chose an exercise from
// Used by  :   MyRoutinesPickMGFragment.java
// Uses     :   MyRoutinesActivity.java
//-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" android:background="@color/colorAccent">

    <TextView
            android:text="Pick muscle group"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtMyRoutinesPickMGTitle"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:layout_alignBaseline="@+id/btnMyRoutinesPickMGBack"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignBottom="@+id/btnMyRoutinesPickMGBack"/>
    <Button
            android:text="Back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/btnMyRoutinesPickMGBack" android:onClick="goToRoutineInfo"
            android:background="@color/DefaultColour"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"/>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@color/DefaultColour"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:id="@+id/listviewMyRoutinesMG"/>

</RelativeLayout>
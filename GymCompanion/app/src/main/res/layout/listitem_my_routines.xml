<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="50dp">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:id="@+id/textView2" android:layout_centerVertical="true" android:layout_marginStart="10dp"
            android:textSize="24sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/textView3"
            android:textSize="12sp" android:layout_alignParentStart="true" android:layout_marginStart="17dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/arrow_up_float"
            android:layout_alignParentEnd="true" android:layout_alignParentBottom="true" android:id="@+id/imageView"
            android:layout_marginBottom="20dp" android:rotation="90"/>
</RelativeLayout>

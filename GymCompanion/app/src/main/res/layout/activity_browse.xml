<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.BrowseActivity">

    <ImageButton
            android:layout_width="72dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/btnBrowse"
            android:onClick="startActivityBrowse"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/btnMain"/>
    <ImageButton
            android:layout_width="72dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/btnMain"
            android:onClick="startActivityMain"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
            android:layout_width="72dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/btnSchedule"
            android:onClick="startActivitySchedule" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBrowse"/>
    <ImageButton
            android:layout_width="72dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/btnStatistics"
            android:onClick="startActivityStatistics" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnMyRoutines"/>
    <ImageButton
            android:layout_width="72dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/btnMyRoutines"
            android:onClick="startActivityMyRoutines" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnSchedule"/>
    <SearchView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/searchBar"
    />
    <Button
            android:text="ROUTINE"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:id="@+id/btnRoutine" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnExercise"
    />

    <Button
            android:text="EXERCISE"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:id="@+id/btnExercise" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnBrowse"
    />

</android.support.constraint.ConstraintLayout>
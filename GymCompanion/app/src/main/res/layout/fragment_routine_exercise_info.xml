<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:background="@drawable/border_bottom_background"
            android:id="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:text="Exercise Name"
                android:textColor="@color/blackColour"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exerciseName"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"
                app:layout_constraintHorizontal_bias="0.1"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
            android:text="@string/description"
            android:textColor="@color/blackColour"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"/>

    <TextView
            android:text="Exercise information ..."
            android:textColor="@color/blackColour"
            android:textSize="18sp"
            android:layout_width="301dp"
            android:layout_height="184dp"
            android:id="@+id/exerciseDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.23"
            android:layout_marginStart="16dp"/>

    <TextView
            android:text="Guide"
            android:textSize="22sp"
            android:textColor="@color/blackColour"
            android:layout_width="73dp"
            android:layout_height="29dp"
            android:id="@+id/textView16"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/exerciseDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"/>

    <TextView
            android:text="Guide information"
            android:textColor="@color/blackColour"
            android:textSize="18sp"
            android:layout_width="302dp"
            android:layout_height="190dp"
            android:id="@+id/guideDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.24"
            android:layout_marginStart="16dp"/>

</android.support.constraint.ConstraintLayout>
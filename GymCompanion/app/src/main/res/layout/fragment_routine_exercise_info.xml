<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
            android:text="Go Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/btnBackToHome"/>

    <TextView
            android:text="Exercise Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:layout_marginTop="18dp"
            android:id="@+id/textViewMyRoutinesInfoRoutineName" android:textSize="24sp" android:textColor="@color/blackColour"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Description:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_marginTop="107dp"
            android:layout_toStartOf="@+id/textViewMyRoutinesInfoRoutineName" android:id="@+id/textView5" android:textSize="18sp"
            android:textColor="@color/blackColour"/>
    <TextView
            android:text="..."
            android:layout_width="333dp"
            android:layout_height="127dp" android:layout_alignParentTop="true" android:layout_marginTop="171dp"
            android:layout_alignStart="@+id/textView5" android:id="@+id/textViewDescription"
            android:textColor="@color/blackColour" android:textSize="18sp"/>
    <TextView
            android:text="Guide:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_marginBottom="210dp" android:layout_alignStart="@+id/textView5" android:id="@+id/textView6"
            android:textSize="18sp" android:textColor="@color/blackColour"/>
    <TextView
            android:text="..."
            android:layout_width="333dp"
            android:layout_height="127dp"
            android:id="@+id/textViewGuide"
            android:textColor="@color/blackColour" android:textSize="18sp" android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="58dp"/>
</RelativeLayout>
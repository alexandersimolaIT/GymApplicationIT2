<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@color/colorAccent">

    <SearchView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/searchBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorAccent"/>
    <Button
            android:text="@string/btnRoutine"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:id="@+id/btnRoutine"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/searchBar"
            android:onClick="goToBrowseSelection"
            android:tag="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnExercise"
            android:background="@color/DefaultColour" android:textColor="@color/white"/>
    <Button
            android:text="@string/btnExercise"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:id="@+id/btnExercise"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnRoutine"
            android:onClick="goToBrowseSelection"
            android:tag="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@layout/fragment_navigation"
            android:layout_marginTop="5dp"
            android:background="@color/DefaultColour"
            android:textColor="@color/white"/>
    <Button
            android:text="@string/btnRecommended"
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:id="@+id/btnRecommended"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnExercise"
            android:onClick="goToBrowseSelection"
            android:tag="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@layout/fragment_navigation"
            android:layout_marginTop="5dp"
            android:background="@color/DefaultColour"
            android:textColor="@color/white"/>
</RelativeLayout>
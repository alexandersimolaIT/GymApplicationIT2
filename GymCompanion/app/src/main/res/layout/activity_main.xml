<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.MainActivity" android:minWidth="0dp" android:minHeight="0dp">


    <ImageButton
            android:layout_width="72dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/btnBrowse"
            android:onClick="startActivityBrowse"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/btnMain"/>
    <ImageButton
            android:layout_width="72dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/btnMain"
            android:onClick="startActivityMain"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
            android:layout_width="72dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/btnSchedule"
            android:onClick="startActivitySchedule" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBrowse"/>
    <ImageButton
            android:layout_width="72dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/btnStatistics"
            android:onClick="startActivityStatistics" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnMyRoutines"/>
    <ImageButton
            android:layout_width="72dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/btnMyRoutines"
            android:onClick="startActivityMyRoutines" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnSchedule"/>
    <Button
            android:text="Start Workout"
            android:background="@color/startButtonGreenColour"
            android:layout_width="350dp"
            android:textSize="35dp"
            android:padding="10dp"
            android:layout_height="130dp"
            android:id="@+id/startButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.502" android:layout_marginTop="180dp"
            app:layout_constraintTop_toTopOf="parent" android:onClick="startWorkout"/>
    <TextView
            android:text="Workout name"
            android:layout_width="wrap_content"
            android:textSize="35dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/workoutName" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/startButton"/>

</android.support.constraint.ConstraintLayout>